{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "test/**/*"
  ]
}
